_jump()
{
  local cur prev opts
  COMPREPLY=()
  cur="${COMP_WORDS[COMP_CWORD]}"
  prev="${COMP_WORDS[COMP_CWORD-1]}"
  opts="--help -h --add -a --del -d --list -l"

  if [[ ${prev} == "-d" || ${prev} == "--del" ]] ; then
    # complete the del command with a list of the available bookmarks
    local bookmarks=$(jump --complete)
    COMPREPLY=( $(compgen -W "${bookmarks}" -- ${cur}) )
    return 0
  fi

  if [[ ${cur:0:1} == "-" ]]; then
    COMPREPLY="$(compgen -W "${opts}" -- ${cur}) "
    return 0
  else
    local bookmarks=$(jump --complete ${cur})
    COMPREPLY=( $(compgen -W "${bookmarks}" -- ${cur}) )
    return 0
  fi 
}

function jump {
  #echo "jump called with $*"
  if [ $# -lt 1 ]; then
    jump-bin --help
  elif [ ${1:0:1} == "-" ]; then
    jump-bin $*
  else
    cd "$(jump-bin $*)"
  fi
}

complete -o nospace -F _jump jump
